
pipeline{
  agent{
         dockerfile true
         }
  stages{
        stage('Example')
        {
          steps{
                 echo 'Hello World'
               }
        }
        stage('Build Docker')
        {
          steps{
                 sh '''
                       docker build -t my-bash-app .
                       docker run -it --rm --name my-running-app my-bash-app
                 '''
               }
        }
  }
}
